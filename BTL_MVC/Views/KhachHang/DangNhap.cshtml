
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("DangNhap", "KhachHang", FormMethod.Post))
{


<div class="container">
    <div class="row">
        <div class="col-lg-8 col-12">
            <div class="form-horizontal " style="margin:auto;">
                <div class=" form-group">
                    <div class="col-md-10">
                        <label id="username">
                            Tên đăng nhập
                        </label>
                        <input type="text" name="username" class="form-control" />

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label id="password">
                            Mật khẩu
                        </label>
                        <input type="password" name="password" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-md-10">
                        <button type="submit" class="btn btn-group">Đăng nhập</button>
                        @Html.ActionLink("Đăng ký", "DangKy", "KhachHang")
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-md-10 text-danger">
                        @ViewBag.err
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
}

