                                                        <li><a href="/giohang/Index">Giỏ hàng</a></li>
                                                        <li><a href="/thanhtoan/Index">Thanh toán</a></li>
                                                    </ul>
                                                </li>
                                                <li><a href="/tintuc/Index">Tin tức</a></li>
                                                <li>
                                                    <a href="/gioithieu/Index">Giới thiệu<i class="ti-angle-down"></i></a>
                                                    <ul class="dropdown">
                                                        <li><a href="/gioithieu/Index">Giới thiệu</a></li>
                                                    </ul>
                                                </li>
                                                @*<li><a href="/lienhe/Index">Liên hệ</a></li>*@
                                            </ul>
                                        </div>
                                    </div>
                                </nav>
                                <!--/ End Main Menu -->
                            </div>
