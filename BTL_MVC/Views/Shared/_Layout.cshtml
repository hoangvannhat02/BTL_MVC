                                    if (Session["UserCustomer"].Equals(""))
                                    {

                                        <li><i class="ti-power-off"></i><a href="~/KhachHang/DangNhap">Đăng nhập</a></li>
                                    }
                                    else
                                    {
                                        <span><i class="ti-user"></i> @Session["UserCustomer"]</span>

                                        <li><i class="ti-power-off"></i><a href="@Url.Action("DangXuat","KhachHang")">Đăng xuất</a></li>
                                    }
                                }

                            </ul>
                        </div>
                        <!-- End Top Right -->
                    </div>
                </div>
            </div>
        </div>
        <!-- End Topbar -->
        <div class="middle-inner">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-12">
                        <!-- Logo -->
                        <div class="logo">

                            <a href="/Home/Index"><img src="~/Content/images/logo.png" alt="logo"></a>
                        </div>
                        <!--/ End Logo -->
                        <!-- Search Form -->
                        <div class="search-top">
                            <div class="top-search"><a href="#0"><i class="ti-search"></i></a></div>
                            <!-- Search Form -->
                            <div class="search-top">
                                @using (Html.BeginForm("TimKiem", "Home", FormMethod.Post))
                                {
                                    <form class="search-form">
                                        <input type="text" placeholder="Search here..." name="search">
                                        <button type="submit"><i class="ti-search"></i></button>
                                    </form>
                                }
                            </div>
                            <!--/ End Search Form -->
                        </div>
                        <!--/ End Search Form -->
                        <div class="mobile-nav"></div>
                    </div>
                    <div class="col-lg-8 col-md-7 col-12">
                        <div class="search-bar-top">
                            <div class="search-bar">

                                <select>
                                    <option selected="selected">Tất cả</option>
                                    <option></option>
                                    <option></option>
                                    <option></option>
                                </select>
                                @using (Html.BeginForm("TimKiem", "Home", FormMethod.Post))
                                {
                                    <form>

                                        <input name="search" placeholder="Nhập thông tin tìm kiếm....." type="search">
                                        <button class="btnn"><i class="ti-search"></i></button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-12">
                        <div class="right-bar">
                            <!-- Search Form -->
                            <div class="sinlge-bar">
                                <a href="#" class="single-icon"><i class="fa fa-heart-o" aria-hidden="true"></i></a>
                            </div>
                            <div class="sinlge-bar">
                                <a href="#" class="single-icon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></a>
                            </div>
                            <div class="sinlge-bar shopping">
                                @{
                                    int? sl = 0;
                                    if (!Session["cart"].Equals(""))
                                    {
                                        List<BTL_MVC.Models.OrderDetail> dssp = (List<BTL_MVC.Models.OrderDetail>)Session["cart"];
                                        foreach (var item in dssp)
                                        {
                                            sl += item.Quantily;
                                        }
                                    
                                    }
                                }
                                <a href="/Home/ViewCart" class="single-icon"><i class="ti-bag"></i> <span class="total-count">@sl</span></a>
                                <!-- Shopping Item -->
                                <div class="shopping-item">

                                    <div class="dropdown-cart-header">
                                        <span>@sl sản phẩm</span>
                                        <a href="/Home/ViewCart">Giỏ hàng</a>
                                    </div>
                                    <ul class="shopping-list">
                                        @{  var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");}
                                        @{
                                            double sum = 0;
                                            if (!Session["cart"].Equals(""))
                                            {
                                                List<BTL_MVC.Models.OrderDetail> sp = (List<BTL_MVC.Models.OrderDetail>)Session["cart"];

                                                foreach (var item in sp)
                                                {
                                                    <li>
                                                        <a href="#" class="remove" title="Remove this item"><i class="fa fa-remove"></i></a>
                                                        <a class="cart-img" href="#"><img src="@item.Products.Images" alt="#"></a>
                                                        <h4><a href="#">@item.Products.ProductName</a></h4>
                                                        <p class="quantity"><input id="quantily-product" value="@item.Quantily" type="number" min="1"> <span class="amount">@String.Format(format, "{0:c0}", @item.Products.Price) </span></p>
                                                    </li>
                                                    sum += Convert.ToDouble(item.Acount);
                                                }

                                            }
                                            else
                                            {
                                                <span>Không có sản phẩm nào trong giỏ hàng</span>
                                            }
                                        }


                                    </ul>
                                    <div class="bottom">
                                        <div class="total">
                                            <span>Giá</span>
                                            <span class="total-amount">@String.Format(format, "{0:c0}", @sum) </span>
                                        </div>
                                        <a href="/giohang/ThanhToan" class="btn animate">Thanh toán</a>

                                    </div>
                                </div>
                                <!--/ End Shopping Item -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header Inner -->
        <div class="header-inner">
            <div class="container">
                <div class="cat-nav-head">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="all-category">
