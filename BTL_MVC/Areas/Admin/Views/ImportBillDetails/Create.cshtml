@model BTL_MVC.Models.ImportBillDetail

@{
    ViewBag.Title = "Thêm chi tiết hóa đơn nhập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới chi tiết hóa đơn nhập</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12 ">
                @Html.LabelFor(model => model.ImportBillId, "ImportBillId", htmlAttributes: new { @class = "control-label" })
            </div>          
            <div class="col-md-10">
                @Html.DropDownList("ImportBillId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ImportBillId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 mt-2">
                @Html.LabelFor(model => model.ProductId, "ProductId", htmlAttributes: new { @class = "control-label" })
            </div>
            
            <div class="col-md-10">
                @Html.DropDownList("ProductId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 mt-2">
                @Html.LabelFor(model => model.Quantily, htmlAttributes: new { @class = "control-label" })
            </div>

           
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantily, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantily, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 mt-2">
                @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label" })
            </div>
            
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-2">
                <button type="submit" class="btn btn-success fa fa-plus"> Thêm mới</button>
                @Html.ActionLink(" Quay lại", "Index", null, new { @class = "btn btn-warning fa fa-close" })
            </div>
        </div>
    </div>
}


